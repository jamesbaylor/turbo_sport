<%= form_with(model: event, html: {class: "flex flex-col border border-gray-200 shadow-md p-2 gap-2"}) do |form| %>
  <h1 class="text-2xl text-purple-800 font-bold" >Create new event</h1>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>
      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%# <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class:"text-input",  placeholder: "Event Name" %>
  </div>
  <div>
    <%# <%= form.label :location, style: "display: block" %>
    <%= form.text_field :location, class: "text-input", placeholder: "Location" %>
  </div>
  <div>
    <%# <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, class: "text-input", placeholder: "Description" %>
  </div>
  <div class="flex gap-3 items-center justify-between">
    <%= form.label :start_time, style: "display: block" %>
    <%= form.datetime_field :start_time, class:"text-input max-w-[60%]" %>
  </div>
  <div class="flex gap-3 items-center justify-between">
    <%= form.label :end_time, style: "display: block" %>
    <%= form.datetime_field :end_time, class:"text-input max-w-[60%]"%>
  </div>
  <div class="flex flex-col gap-2" data-controller="price">
    <div class="flex gap-3 items-center">
      <%= form.label :is_free, style: "display: block" %>
      <%= form.check_box :is_free, id: "is_free", data: {action: "price#show"} %>
    </div>
    <div data-price-target="visible">
      <%# <%= form.label :price, style: "display: block" %>
      <%= form.text_field :price,  class: "text-input controlled", placeholder: "Price" %>
    </div>
  </div>
  <div>
    <%# <%= form.label :available_spots, style: "display: block" %>
    <%= form.number_field :available_spots, class: "text-input", placeholder: "Available spots" %>
  </div>
  <div>
    <%# <%= form.label :maximum_applications, style: "display: block" %>
    <%= form.number_field :maximum_applications,  class: "text-input", placeholder: "Maximum Applications"%>
  </div>
  <div>
    <%= form.file_field :image, placeholder: "Attach the image" %>
  </div>
  <div class="flex items-center justify-end gap-3 py-3" >
    <%= form.submit "Create" , class: "btn blue-green " %>
    <%= link_to  events_path, class:"btn outline" do %>
      <%= render "shared/icons/arrow_left" %> Back
    <% end %>
  </div>
<% end %>
